<div class="page-header">
  <h1>
  <%= current_user.username %>'s  Likes

    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

      <th>Photo</th>

        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>

      <td><img src="<%= Photo.find_by(id: like.photo_id).image %>" </a></td>
        <td><%= Photo.find_by(id: like.photo_id).caption %></td>

        <td>

          <li class="media">
            <div class="media-body">
              <form action="/create_comment" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->

                <input type="hidden" name="photo_id" value= <%= like.photo_id %> >

                <input type="hidden" name="user_id" value= <%= like.photo_id %> >

                <!-- Label and input for body -->
                <div class="form-group">
                  <label for="body" class="sr-only">
                    Body
                  </label>

                  <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required>
                </div>
              </form>
            </div>
          </li>

          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>

          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
