                  <p class="text-muted"><%=time_ago_in_words(photo.updated_at) %> ago </p>
                </h3>
            </div>
            <div class="panel-body">

                <p class="text-muted">
                    <%= photo.caption %>

                <img src="<%= photo.image %>" class="img-responsive" </a> <%= photo.user_id %>
            </p>

